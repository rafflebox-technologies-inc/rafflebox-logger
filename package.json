{
  "name": "@rafflebox-technologies-inc/rafflebox-logger",
  "version": "1.5.2",
  "description": "Standard JSON logger for Node services",
  "author": "Rafflebox Engineering",
  "main": "index.js",
  "types": "index.d.ts",
  "license": "UNLICENSED",
  "homepage": "https://github.com/rafflebox-technologies-inc/rafflebox-logger",
  "repository": {
    "type": "git",
    "url": "git://github.com/rafflebox-technologies-inc/rafflebox-logger.git"
  },
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "clean": "rm -rf build",
    "build": "tsc",
    "watch": "tsc --watch",
    "test": "jest --verbose --detectOpenHandles --config=jest.config.js",
    "lint": "eslint \"**/*.{ts,js}\"",
    "format": "prettier --write \"**/*.{ts,js,json,md,yml}\"",
    "format:check": "prettier --debug-check \"**/*.{ts,js,json,md,yml}\""
  },
  "prettier": "@rafflebox-technologies-inc/rafflebox-prettier-config",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --max-warnings 100",
      "git add"
    ],
    "*.{ts,js,json,md,yml}": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "chalk": "~4.1.2",
    "traverse": "~0.6.6",
    "winston": "~3.3.3"
  },
  "peerDependencies": {
    "config-dug": "~1.7.1"
  },
  "devDependencies": {
    "@types/jest": "~27.0.3",
    "@types/node": "~16.11.11",
    "@rafflebox-technologies-inc/rafflebox-prettier-config": "~1.0.1",
    "@types/chai": "~4.2.14",
    "@types/mocha": "~8.2.0",
    "@types/sinon": "~9.0.10",
    "@types/sinon-chai": "~3.2.5",
    "@types/traverse": "~0.6.32",
    "config-dug": "~1.7.1",
    "cross-env": "~7.0.3",
    "eslint": "~6.8.0",
    "eslint-config-rafflebox": "~0.2.0",
    "husky": "~3.1.0",
    "jest": "~27.4.3",
    "lint-staged": "~9.2.1",
    "ts-jest": "~27.1.0",
    "typescript": "~4.5.2",
    "prettier": "~2.3.2",
    "sinon": "~9.2.3",
    "sinon-chai": "~3.5.0",
    "source-map-support": "~0.5.19",
    "ts-node": "~9.1.1"
  }
}
