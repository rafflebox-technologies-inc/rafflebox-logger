{
  "name": "@rafflebox-technologies-inc/rafflebox-logger",
  "version": "1.0.3",
  "description": "Standard JSON logger for Node services",
  "author": "Rafflebox Engineering",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "license": "UNLICENSED",
  "homepage": "https://github.com/rafflebox-technologies-inc/rafflebox-logger",
  "repository": {
    "type": "git",
    "url": "git://github.com/rafflebox-technologies-inc/rafflebox-logger.git"
  },
  "engines": {
    "node": ">=10.0.0"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "test": "echo no tests",
    "lint": "eslint \"**/*.{ts,js}\"",
    "format": "prettier --write \"**/*.{ts,js,json,md,yml}\"",
    "format:check": "prettier --debug-check \"**/*.{ts,js,json,md,yml}\""
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --max-warnings 100",
      "git add"
    ],
    "*.{ts,js,json,md,yml}": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "config-dug": "^1.6.2",
    "winston": "3.2.1"
  },
  "devDependencies": {
    "@types/jest": "24.9.1",
    "@types/node": "~12.12.26",
    "eslint": "^6.8.0",
    "eslint-config-rafflebox": "^0.2.0",
    "husky": "3.1.0",
    "jest": "25.1.0",
    "lint-staged": "9.2.1",
    "prettier": "1.19.1",
    "ts-jest": "25.0.0",
    "typescript": "3.7.3"
  }
}
