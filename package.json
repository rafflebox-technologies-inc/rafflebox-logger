{
  "name": "@rafflebox-technologies-inc/rafflebox-logger",
  "version": "1.4.0",
  "description": "Standard JSON logger for Node services",
  "author": "Rafflebox Engineering",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "license": "UNLICENSED",
  "homepage": "https://github.com/rafflebox-technologies-inc/rafflebox-logger",
  "repository": {
    "type": "git",
    "url": "git://github.com/rafflebox-technologies-inc/rafflebox-logger.git"
  },
  "engines": {
    "node": ">=10.0.0"
  },
  "scripts": {
    "clean": "rm -rf build",
    "build": "tsc",
    "watch": "tsc --watch",
    "test": "cross-env NODE_ENV=unittest mocha --config ./test/.mocharc.jsonc",
    "lint": "eslint \"**/*.{ts,js}\"",
    "format": "prettier --write \"**/*.{ts,js,json,md,yml}\"",
    "format:check": "prettier --debug-check \"**/*.{ts,js,json,md,yml}\""
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --max-warnings 100",
      "git add"
    ],
    "*.{ts,js,json,md,yml}": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "chalk": "^4.1.0",
    "config-dug": "^1.6.2",
    "traverse": "^0.6.6",
    "winston": "3.2.1"
  },
  "devDependencies": {
    "@types/chai": "^4.2.14",
    "@types/mocha": "^8.2.0",
    "@types/node": "~12.12.26",
    "@types/sinon": "^9.0.10",
    "@types/sinon-chai": "^3.2.5",
    "@types/traverse": "^0.6.32",
    "chai": "^4.2.0",
    "cross-env": "^7.0.3",
    "eslint": "^6.8.0",
    "eslint-config-rafflebox": "^0.2.0",
    "husky": "3.1.0",
    "lint-staged": "~9.2.1",
    "mocha": "^8.2.1",
    "prettier": "1.19.1",
    "sinon": "^9.2.3",
    "sinon-chai": "^3.5.0",
    "source-map-support": "^0.5.19",
    "ts-node": "^9.1.1",
    "typescript": "3.7.3"
  }
}
